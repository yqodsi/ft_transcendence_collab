FROM node:15.4

# Create app directory, this is in our container/in our image
WORKDIR /usr/src/app

# Install app dependencies
# COPY /Nestjs/package*.json ./
# RUN npm install

# Bundle app source
COPY /api .

EXPOSE 3333
